@model IEnumerable<AppleStoreStuff.Models.IPhone>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align: center;">iPhone</h2>

<p>
    <a href="/IPhone/Create" class="btn btn-success">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
            </th>
            <th>
                Model
            </th>
            <th>
                Memory
            </th>
            <th>
                Color
            </th>
            <th>
                Price
            </th>
            <th>
                Amount
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr >
            <td>
                <img src="~/images/@item.IPhoneModel-@item.Color .webp" alt="@item.IPhoneModel-@item.Color-img" />
            </td>
            <td style="padding-top: 120px;">
                @Html.DisplayFor(modelItem => item.IPhoneModel)
            </td>
            <td style="padding-top: 120px;">
                @Html.DisplayFor(modelItem => item.Memory)
            </td>
            <td style="padding-top: 120px;">
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td style="padding-top: 120px;">
               $ @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td style="padding-top: 120px;">
                @Html.DisplayFor(modelItem => item.AmountOfProduct)
            </td>
            <td style="padding-top: 60px;">
                <a href="/IPhone/Edit/@item.Id" class="btn btn-default" style="margin-bottom: 15px;">Edit</a>
                <br>
                <a href="/IPhone/Details/@item.Id" class="btn btn-success" style="margin-bottom: 15px;">Details</a>
                <br>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" style="margin-bottom: 15px;">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
